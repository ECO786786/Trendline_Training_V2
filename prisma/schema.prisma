generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  USER
  ADMIN
  DEVELOPER
  MARKETING
}

enum InquiryType {
  GENERAL
  CORPORATE
}

enum DeliveryMethod {
  IN_PERSON
  ONLINE_LIVE
  HYBRID
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  ALL_LEVELS
}

enum RegistrationType {
  BOOKING
  INTEREST
}

model Course {
  id            Int         @id @default(autoincrement())
  slug          String      @unique
  title         String
  subTitle      String?
  description   String?     @db.Text
  category      String
  duration      String
  level         CourseLevel
  priceZM       Decimal     @db.Decimal(10, 2)
  priceUS       Decimal     @db.Decimal(10, 2)
  overview      String      @db.Text
  prerequisites String?     @db.Text // Can be long
  certificate   String?
  imageSrc      String?
  imageAlt      String?

  // Relations
  curriculum       CurriculumItem[]
  learningOutcomes LearningOutcome[]
  registrations    Registration[]
  scheduledCourses ScheduledCourse[]

  updatedAt DateTime @updatedAt @default(now())
  createdAt DateTime @default(now())
}

model CurriculumItem {
  id          Int    @id @default(autoincrement())
  courseId    Int
  title       String
  description String @db.Text // Descriptions can be long
  course      Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model LearningOutcome {
  id          Int    @id @default(autoincrement())
  courseId    Int
  description String
  course      Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model ScheduledCourse {
  id           Int      @id @default(autoincrement())
  courseId     Int
  startDate    DateTime
  endDate      DateTime
  location     String   @default("Mika Convention Center, Lusaka")
  maxAttendees Int      @default(20)

  course        Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  registrations Registration[]
}

model Registration {
  id                Int              @id @default(autoincrement())
  courseId          Int?
  scheduledCourseId Int?
  firstName         String
  surname           String
  email             String
  phone             String
  company           String?
  deliveryMethod    DeliveryMethod
  type              RegistrationType @default(BOOKING)
  course            Course?          @relation(fields: [courseId], references: [id])
  scheduledCourse   ScheduledCourse? @relation(fields: [scheduledCourseId], references: [id])
  updatedAt         DateTime         @updatedAt @default(now())
  createdAt         DateTime         @default(now())
}

model Inquiry {
  id           Int         @id @default(autoincrement())
  type         InquiryType
  fullName     String
  email        String
  phone        String
  company      String?
  subject      String?
  message      String?     @db.Text
  serviceName  String?
  servicePrice String?
  updatedAt    DateTime    @updatedAt @default(now())
  createdAt    DateTime    @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}
